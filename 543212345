#include <iostream>
#include <algorithm>
#include <string.h>
#include <string>
#include <vector>
using namespace std;
int main()
{
    int n = 5;
    int space = 0;
    int r = 9;
    for (int i = n; i >= 1; i--)
    {
        for (space = n; space > i; space--)
            cout << space << " ";
        for (int j = 0; j <= 2 * i - 1; j++)
            cout << i << " ";
        for (space = i; space < n; space++)
            cout << space << " ";
        cout << endl;
    }
    for (int i = 2; i <= 5; i++)
    {
        for (space = n; space > i; space--)
            cout << space << " ";
        for (int j = 0; j <= 2 * i - 1; j++)
            cout << i << " ";
        for (space = i; space < n; space++)
            cout << space << " ";
        cout << endl;
    }

    return 0;
}
